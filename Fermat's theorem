### check Fermat's theorem 
def result(a,b,c,n):
    if n>2 and pow(a,n)+pow(b,n)==pow(c,n):
        print('Holy smokes, Fermant was wrong')
    else: 
        print("No, that doesn't work")
result(3,4,5,3)

def check_numbers(a,b,c,n):
    a = int(input("Choose a number for a: "))
    b = int(input("Choose a number for b: "))
    c = int(input("Choose a number for c: "))
    n = int(input("Choose a number for n: "))
    return result(a, b, c, n)
check_numbers()
